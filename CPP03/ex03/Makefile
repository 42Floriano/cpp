C++ = c++
C++_FLAGS = -Wall -Wextra -Werror -std=c++98
INFILES = main.cpp\
			ClapTrap.class.cpp\
			FragTrap.class.cpp\
			ScavTrap.class.cpp\
			DiamondTrap.class.cpp\
			

OBJFILES = $(INFILES:.cpp=.o)

NAME = fragtrap

all: $(NAME)

$(NAME):$(OBJFILES)
	$(C++) $(C++_FLAGS) $(OBJFILES) -o $(NAME) 

%.o: %.cpp
	$(C++) $(C++_FLAGS) -c $< -o $@

clean:
	rm -f $(OBJFILES)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re